{
    "name": "csharp-api-explorer",
    "displayName": "%extension.displayName%",
    "description": "%extension.description%",
    "version": "1.0.15",
    "publisher": "dankit",
    "icon": "resources/icons/icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/wjire/csharp-api-explorer"
    },
    "bugs": {
        "url": "https://github.com/wjire/csharp-api-explorer/issues"
    },
    "homepage": "https://github.com/wjire/csharp-api-explorer#readme",
    "license": "MIT",
    "keywords": [
        "api",
        "route",
        "routes",
        "explorer",
        "csharp",
        "aspnet",
        "aspnet core",
        "dotnet",
        "controller",
        "endpoint",
        "rest api",
        "web api",
        "route analyzer",
        "api explorer",
        "route management"
    ],
    "galleryBanner": {
        "color": "#007ACC",
        "theme": "dark"
    },
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Programming Languages",
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "csharpApiExplorer",
                    "title": "%viewContainer.apiExplorer.title%",
                    "icon": "resources/icons/activity-bar.svg"
                }
            ]
        },
        "views": {
            "csharpApiExplorer": [
                {
                    "id": "csharpApiExplorer.routesList",
                    "name": "",
                    "visibility": "visible",
                    "type": "tree"
                }
            ]
        },
        "commands": [
            {
                "command": "csharpApiExplorer.refresh",
                "title": "%command.refresh.title%",
                "icon": "$(refresh)"
            },
            {
                "command": "csharpApiExplorer.search",
                "title": "%command.search.title%",
                "icon": "$(search)"
            },
            {
                "command": "csharpApiExplorer.clearSearch",
                "title": "%command.clearSearch.title%",
                "icon": "$(clear-all)"
            },
            {
                "command": "csharpApiExplorer.expandAll",
                "title": "%command.expandAll.title%",
                "icon": "$(expand-all)"
            },
            {
                "command": "csharpApiExplorer.setAlias",
                "title": "%command.setAlias.title%"
            },
            {
                "command": "csharpApiExplorer.clearAlias",
                "title": "%command.clearAlias.title%"
            },
            {
                "command": "csharpApiExplorer.copyRoute",
                "title": "%command.copyRoute.title%"
            },
            {
                "command": "csharpApiExplorer.startDebugging",
                "title": "%command.startDebugging.title%"
            },
            {
                "command": "csharpApiExplorer.runProject",
                "title": "%command.runProject.title%"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "csharpApiExplorer.search",
                    "when": "view == csharpApiExplorer.routesList",
                    "group": "navigation@1"
                },
                {
                    "command": "csharpApiExplorer.clearSearch",
                    "when": "view == csharpApiExplorer.routesList",
                    "group": "navigation@2"
                },
                {
                    "command": "csharpApiExplorer.refresh",
                    "when": "view == csharpApiExplorer.routesList",
                    "group": "navigation@3"
                },
                {
                    "command": "csharpApiExplorer.expandAll",
                    "when": "view == csharpApiExplorer.routesList",
                    "group": "navigation@4"
                }
            ],
            "view/item/context": [
                {
                    "command": "csharpApiExplorer.setAlias",
                    "when": "view == csharpApiExplorer.routesList && viewItem == route",
                    "group": "edit@1"
                },
                {
                    "command": "csharpApiExplorer.clearAlias",
                    "when": "view == csharpApiExplorer.routesList && viewItem == route",
                    "group": "edit@2"
                },
                {
                    "command": "csharpApiExplorer.copyRoute",
                    "when": "view == csharpApiExplorer.routesList && viewItem == route",
                    "group": "edit@3"
                },
                {
                    "command": "csharpApiExplorer.startDebugging",
                    "when": "view == csharpApiExplorer.routesList && (viewItem == route || viewItem == projectGroup)",
                    "group": "debug@1"
                },
                {
                    "command": "csharpApiExplorer.runProject",
                    "when": "view == csharpApiExplorer.routesList && (viewItem == route || viewItem == projectGroup)",
                    "group": "debug@2"
                }
            ]
        },
        "configuration": {
            "title": "%config.title%",
            "properties": {
                "csharpApiExplorer.excludePatterns": {
                    "type": "array",
                    "default": [
                        "**/bin/**",
                        "**/obj/**",
                        "**/node_modules/**",
                        "**/.vs/**",
                        "**/.git/**",
                        "**/.github/**",
                        "**/.idea/**",
                        "**/.vscode/**",
                        "**/dist/**",
                        "**/out/**",
                        "**/build/**",
                        "**/wwwroot/lib/**"
                    ],
                    "description": "%config.excludePatterns.description%"
                },
                "csharpApiExplorer.sortAliasFirst": {
                    "type": "boolean",
                    "default": false,
                    "description": "%config.sortAliasFirst.description%"
                },
                "csharpApiExplorer.sortByRoutePath": {
                    "type": "boolean",
                    "default": false,
                    "description": "%config.sortByRoutePath.description%"
                },
                "csharpApiExplorer.defaultApiVersion": {
                    "type": "string",
                    "default": "1.0",
                    "description": "%config.defaultApiVersion.description%"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.85.0",
        "@types/node": "20.x",
        "@typescript-eslint/eslint-plugin": "^6.15.0",
        "@typescript-eslint/parser": "^6.15.0",
        "eslint": "^8.56.0",
        "typescript": "^5.3.3",
        "@vscode/test-electron": "^2.3.8"
    }
}