{
    "name": "csharp-api-explorer",
    "displayName": "C# API Explorer",
    "description": "A powerful visual explorer for C# ASP.NET Core APIs — parse, search, navigate, analyze and manage your API routes effortlessly.",
    "version": "1.0.13",
    "publisher": "dankit",
    "icon": "resources/icons/icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/wjire/csharp-api-explorer"
    },
    "bugs": {
        "url": "https://github.com/wjire/csharp-api-explorer/issues"
    },
    "homepage": "https://github.com/wjire/csharp-api-explorer#readme",
    "license": "MIT",
    "keywords": [
        "api",
        "route",
        "routes",
        "explorer",
        "csharp",
        "aspnet",
        "aspnet core",
        "dotnet",
        "controller",
        "endpoint",
        "rest api",
        "web api",
        "route analyzer",
        "api explorer",
        "route management"
    ],
    "galleryBanner": {
        "color": "#007ACC",
        "theme": "dark"
    },
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Programming Languages",
        "Other"
    ],
    "main": "./out/extension.js",
    "extensionDependencies": [
        "ms-dotnettools.csdevkit"
    ],
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "csharpApiExplorer",
                    "title": "API Explorer",
                    "icon": "resources/icons/activity-bar.svg"
                }
            ]
        },
        "views": {
            "csharpApiExplorer": [
                {
                    "id": "csharpApiExplorer.routesList",
                    "name": "",
                    "visibility": "visible",
                    "type": "tree"
                }
            ]
        },
        "commands": [
            {
                "command": "csharpApiExplorer.refresh",
                "title": "刷新路由 (Refresh Routes)",
                "icon": "$(refresh)"
            },
            {
                "command": "csharpApiExplorer.search",
                "title": "搜索路由 (Search Routes)",
                "icon": "$(search)"
            },
            {
                "command": "csharpApiExplorer.clearSearch",
                "title": "清除搜索 (Clear Search)",
                "icon": "$(clear-all)"
            },
            {
                "command": "csharpApiExplorer.expandAll",
                "title": "全部展开 (Expand All)",
                "icon": "$(expand-all)"
            },
            {
                "command": "csharpApiExplorer.setAlias",
                "title": "设置别名 (Set Alias)"
            },
            {
                "command": "csharpApiExplorer.clearAlias",
                "title": "清除别名 (Clear Alias)"
            },
            {
                "command": "csharpApiExplorer.copyRoute",
                "title": "复制路由 (Copy Route)"
            },
            {
                "command": "csharpApiExplorer.startDebugging",
                "title": "启动调试 (Start Debugging)"
            },
            {
                "command": "csharpApiExplorer.runProject",
                "title": "运行项目 (Run Project)"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "csharpApiExplorer.search",
                    "when": "view == csharpApiExplorer.routesList",
                    "group": "navigation@1"
                },
                {
                    "command": "csharpApiExplorer.clearSearch",
                    "when": "view == csharpApiExplorer.routesList",
                    "group": "navigation@2"
                },
                {
                    "command": "csharpApiExplorer.refresh",
                    "when": "view == csharpApiExplorer.routesList",
                    "group": "navigation@3"
                },
                {
                    "command": "csharpApiExplorer.expandAll",
                    "when": "view == csharpApiExplorer.routesList",
                    "group": "navigation@4"
                }
            ],
            "view/item/context": [
                {
                    "command": "csharpApiExplorer.setAlias",
                    "when": "view == csharpApiExplorer.routesList && viewItem == route",
                    "group": "edit@1"
                },
                {
                    "command": "csharpApiExplorer.clearAlias",
                    "when": "view == csharpApiExplorer.routesList && viewItem == route",
                    "group": "edit@2"
                },
                {
                    "command": "csharpApiExplorer.copyRoute",
                    "when": "view == csharpApiExplorer.routesList && viewItem == route",
                    "group": "edit@3"
                },
                {
                    "command": "csharpApiExplorer.startDebugging",
                    "when": "view == csharpApiExplorer.routesList && (viewItem == route || viewItem == projectGroup)",
                    "group": "debug@1"
                },
                {
                    "command": "csharpApiExplorer.runProject",
                    "when": "view == csharpApiExplorer.routesList && (viewItem == route || viewItem == projectGroup)",
                    "group": "debug@2"
                }
            ]
        },
        "configuration": {
            "title": "C# API Explorer",
            "properties": {
                "csharpApiExplorer.excludePatterns": {
                    "type": "array",
                    "default": [
                        "**/bin/**",
                        "**/obj/**",
                        "**/node_modules/**",
                        "**/.vs/**",
                        "**/.git/**",
                        "**/.github/**",
                        "**/.idea/**",
                        "**/.vscode/**",
                        "**/dist/**",
                        "**/out/**",
                        "**/build/**",
                        "**/wwwroot/lib/**"
                    ],
                    "description": "排除的文件模式(Files to exclude)"
                },
                "csharpApiExplorer.sortAliasFirst": {
                    "type": "boolean",
                    "default": false,
                    "description": "有别名的路由是否置顶 (Whether routes with aliases should be placed at the top)"
                },
                "csharpApiExplorer.sortByRoutePath": {
                    "type": "boolean",
                    "default": false,
                    "description": "是否按路由路径字母顺序排序，否则按文件中的顺序 (Whether to sort routes by path alphabetically, otherwise by file order)"
                },
                "csharpApiExplorer.defaultApiVersion": {
                    "type": "string",
                    "default": "1.0",
                    "description": "当控制器没有 [ApiVersion] 特性时使用的默认版本号（默认 '1.0'，与 ASP.NET Core 官方默认值一致） (Default API version when controller has no [ApiVersion] attribute (default: '1.0', same as ASP.NET Core official default))"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.85.0",
        "@types/node": "20.x",
        "@typescript-eslint/eslint-plugin": "^6.15.0",
        "@typescript-eslint/parser": "^6.15.0",
        "eslint": "^8.56.0",
        "typescript": "^5.3.3",
        "@vscode/test-electron": "^2.3.8"
    }
}